{
    "manifest_version": 3,
    "name": "SEO Meta Inspector by Chokqu",
    "version": "1.0.0",
    "description": "Analyze meta tags, OpenGraph, Twitter Cards and HTML structure for SEO optimization",
    "author": "Chokqu | chokqu.com",
    "homepage_url": "https://chokqu.com",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "SEO Meta Inspector"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [{
      "resources": ["icons/*", "popup.html", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Open SEO Meta Inspector"
      }
    },
    "minimum_chrome_version": "88",
    "offline_enabled": true,
    "options_page": "options.html"
  }
  